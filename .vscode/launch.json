{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Jest Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": ["--inspect-brk", "${workspaceRoot}/node_modules/jest/bin/jest.js", "--runInBand"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        },
        {
            "name": "Debug Current File",
            "type": "node",
            "request": "launch",
            "runtimeArgs": ["\"${workspaceRoot}\\node_modules\\jest\\bin\\jest.js\"", "\"${workspaceRoot}\\${relativeFile}\"", "--runInBand", "--config jest.config.js", ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        }
    ]
}
