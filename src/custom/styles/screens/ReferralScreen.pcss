.button {
  display: inline-block;
  z-index: 200;
  font-family: IBM Plex Sans;
  font-style: normal;
  font-weight: bold;
  font-size: 19.2px;
  line-height: 25px;
  text-align: center;
  letter-spacing: 0.72px;
  text-transform: uppercase;
  text-decoration: none;
  padding: 18px 53px;
  border-radius: 6px;
  -webkit-appearance: none;
  appearance: none;
  border: none;
  cursor: pointer;
  position: relative;
  transition: transform ease-in 0.1s, box-shadow ease-in 0.25s;
  /* box-shadow: none; */
  
  &:active{
    transform: scale(0.9);
    box-shadow: 0 2px 25px rgba(15, 0, 13, 0.2);
  }
  &:hover {
transition: transform ease-in 0.1s, box-shadow ease-in 0.25s;
  box-shadow: 0 2px 25px rgba(15, 0, 13, 0.5);
  }
  &:focus {
    outline: 0;
  }
  &:before, &:after{
    position: absolute;
    content: '';
    display: block;
    width: 140%;
    height: 100%;
    left: -20%;
    z-index: -1000;
    transition: all ease-in-out 0.5s;
    background-repeat: no-repeat;
  }
  
  &:before{
    display: none;
    top: -75%;
    background-image:  
      radial-gradient(circle, orange 20%, transparent 20%),
    radial-gradient(circle,  transparent 20%, blue 20%, transparent 30%),
    radial-gradient(circle, magenta 20%, transparent 20%), 
    radial-gradient(circle, green 20%, transparent 20%),
    radial-gradient(circle,  transparent 10%, orange 15%, transparent 20%),
    radial-gradient(circle, blue 20%, transparent 20%),
    radial-gradient(circle, red 20%, transparent 20%),
    radial-gradient(circle, orange 20%, transparent 20%),
    radial-gradient(circle, green 20%, transparent 20%);
  background-size: 10% 10%, 20% 20%, 15% 15%, 20% 20%, 18% 18%, 10% 10%, 15% 15%, 10% 10%, 18% 18%;
  /* background-position: 0% 80%, -5% 20%, 10% 40%, 20% 0%, 30% 30%, 22% 50%, 50% 50%, 65% 20%, 85% 30%; */
  }
  
  &:after{
    display: none;
    bottom: -75%;
    background-image:  
    radial-gradient(circle, orange 20%, transparent 20%), 
    radial-gradient(circle, red 20%, transparent 20%),
    radial-gradient(circle,  transparent 10%, green 15%, transparent 20%),
    radial-gradient(circle, blue 20%, transparent 20%),
    radial-gradient(circle, red 20%, transparent 20%),
    radial-gradient(circle, magenta 20%, transparent 20%),
    radial-gradient(circle, blue 20%, transparent 20%);
  background-size: 15% 15%, 20% 20%, 18% 18%, 20% 20%, 15% 15%, 10% 10%, 20% 20%;
  /* background-position: 5% 90%, 10% 90%, 10% 90%, 15% 90%, 25% 90%, 25% 90%, 40% 90%, 55% 90%, 70% 90%; */
  }
  
 &.animate{
    &:before{
      display: block;
      animation: topBubbles ease-in-out 0.75s forwards;
    }
    &:after{
      display: block;
      animation: bottomBubbles ease-in-out 0.75s forwards;
    }
  }
  
  
  
}


  


