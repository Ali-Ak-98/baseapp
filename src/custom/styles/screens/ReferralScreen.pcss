@import url('https://fonts.googleapis.com/css?family=IBM+Plex+Sans&display=swap');

.pg-referral-screen {
    font-family: IBM Plex Sans;
    font-size: 14px;
    color: black;
    background: white;
    .pg-referral-screen__container {
        background: var(--referral-gold);
        width: 430px;
    }
    @media (max-width:430px) {
      .pg-referral-screen__container {
        width: 360px;
      } 
    }
    @media (max-width:360px) {
      .pg-referral-screen__container {
        width: 100%;
      } 
      #banner .signup-container {
        width: 100%;
      }
    }
    .cr-logo {
        display: none;
    }
    .cr-sign-up-form {
        background: var(--referral-gold);
        color: black;

        &__button {
            color: white;
            background: black !important;
            transition: transform ease-in 0.1s, box-shadow ease-in 0.25s;
            /* box-shadow: 0 2px 25px rgba(15, 0, 13, 0.5); */
            &:active{
                transform: scale(0.9);
                box-shadow: 0 2px 25px rgba(15, 0, 13, 0.2);
            }
            &:hover {
              box-shadow: 0 2px 25px rgba(15, 0, 13, 0.5);
            }
        }
        &__checkbox {
          display: inline;
        }
        &__checkbox .cr-checkbox__checkitem:after {
            border-color: black;
        }
        &__form-content {
            top: 60px;
        }
        &__group {
            border: 2px solid #475354;
            border-radius: 5px;
        }
        &__group--focused {
            .cr-sign-up-form__label {
                color: var(--accent);
            }
            input {
                border: 2px solid white !important;
            }
        }
        &__input input {
            color: black; 
            background: white; 
        }
        &__option:first-child {
            display: none;
        }
        &__option {
            width: 100%;
            background: var(--referral-gold);
            text-transform: none;
            text-align: left;
        }
        &__option .__selected {
            border-bottom: none;
            color: black;
            text-align: left;
        }
        &__option_inner{
            text-align: left;
            font-size: 20px;
        }
        
        &__label {
            display: none;
            background: var(--base-bright);
            color: var(--text-muted);
            font-size: calc(var(--gap) * 2);
            top: calc(var(--gap) * -1.33);
            position: absolute;
        }
        &__terms-link {
            display: inline;
            vertical-align: -webkit-baseline-middle;
            margin-left: -18px;
            padding-left: 0;
            color: black;
            a {
                color: black;
            }
        }
    }

    .total-tickets-wrapper {
        box-sizing: border-box;
        position: relative;
        height: 160px;
        .total-tickets {
            border: 2px solid var(--referral-gold);
            border-radius: 15px;
            top: 165px;
            right: 0;
            font-weight: 500;
            position: relative;
        }
        a {
            color: black;
            &:visited {
                color: #333;
            }
        }
        .header {
            font-size: 24px;
            line-height: 30px;
            padding: 39px 30px 25px;
        }
        .content {
            font-size: 18px;
            line-height: 30px;
            padding: 30px;
            padding-top: 0;
        }
    }
