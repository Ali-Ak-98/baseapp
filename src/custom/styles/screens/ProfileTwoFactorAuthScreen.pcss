.pg-profile-two-factor-auth {
  &__body {
    .cr-input {
      input {
        color: var(--bright);
      }
    }
  }
}

.profile-2fa-mfa-popup {
  .popup-content-item {
    color: #fff;
    text-align: center;
    margin: 15px 0;
    font-size: 14px;
  }

  .mfa-popup-header {
    position: relative;
    font-weight: bold;
    text-transform: uppercase;
    font-size: 14px;
  }

  .mfa-popup-close-button {
    position: absolute;
    right: -3px;
    top: -6px;
    color: #999;
    font-size: 21px;
    cursor: pointer;
  }

  .cr-button {
    line-height: 0;
    background-color: #FFD567;
    color: #141717;
    font-family: Roboto !important;
    font-weight: normal !important;

    &:hover,
    &:focus {
      background-color: #FFD567;
    }
  }

  .auth2fa-mfa-footer {
    text-align: center;
    padding-bottom: 15px;
  }

  .popup-content-item {
    display: inline;
    color: #7D9794;
    line-height: 20px;

    span {
      color: #fff;
    }

    &--header {
      color: #FFD567;
      font-size: 18px;
    }
  }

  .popup-content {
    &__spacer {
      position: relative;
      padding-bottom: 21px;
    }
  }

  .cr-modal__container-content {
    text-align: center;
    padding: 0 calc(var(--gap) * 10.23) !important;


  }

  .cr-modal__container {
    width: calc(var(--gap) * 89.3);

    @media screen and (max-width: 600px) {
      width: calc(var(--gap) * 64.3);
    }
  }

  .cr-modal__container-header {
    border-bottom: 1px solid #54b489;
  }
}


@media screen and (max-width: 600px) {
  .profile-2fa-mfa-popup {
    .cr-modal__container-content {
      padding: 0 calc(var(--gap) * 5.23) !important;
    }

    .cr-modal__container {
      width: calc(var(--gap) * 64.3) !important;
    }
  }
}
