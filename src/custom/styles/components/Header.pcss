.pg-header {
  .pg-logo__img {
    height: 37px;
    width: 132px;
  }

  .pg-container {
    padding: 0 15px;
  }
}

@media screen and (max-width: 800px) {
  .pg-header {

    .pg-container {
      padding: 0;
      height: 60px;
      max-width: 100%;
    }

    &__img {
      width: 100px;
    }

    &__navbar {
      padding-top: 0;
      margin-left: 0;
    }
  }
}
