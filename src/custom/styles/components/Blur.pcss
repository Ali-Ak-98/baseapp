.blur-block {
    position: relative;

    &__body {
        align-items: center;
        backdrop-filter: blur(10px);
        background-color: rgba(34, 38, 39, 0.65);
        display: flex;
        height: 100%;
        justify-content: center;
        position: absolute;
        width: 100%;
        z-index: 10;
        top: 0;
        left: 0;
    }

    &__text {
        position: absolute;
        top: 50px;
        font-size: 16px;
    }
}
