.cr-white-list {
  .cr-email-form__button {
    align-items: center;
    display: flex;
    justify-content: center;
    margin-top: 10px;
    outline: none;
    width: 560px;

    &--disabled {
      background: var(--whitelist-button-disabled) !important;
      color: var(--whitelist-primary-0-5) !important;
    }
  }

  &__title {
    color: var(--color-white);
    font-family: Roboto;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: 40px;
  }

  &__add {
    align-items: center;
    background-color: var(--background-whitelist-add);
    border-radius: 4px;
    cursor: pointer;
    display: flex;
    height: 50px;
    justify-content: space-between;
    padding: 13px;
    transition: 0.2s;

    &__label {
      color: var(--color-white);
      font-family: Roboto;
      font-size: 12px;
      font-style: normal;
      font-weight: 500;
      line-height: 12px;
    }

    &__icon {
      height: 11px;
      margin-right: 10px;
      width: 11px;
    }

    &:hover {
      background-color: var(--whitelist-primary-0-1);
    }
  }

  .whitelist-add-address-modal--coin .cr-email-form {
    min-height: calc(var(--big-gap) * 6.6);
  }

  .whitelist-add-address-modal--fiat .cr-email-form {
    min-height: calc(var(--big-gap) * 12);
  }

  .whitelist-confirmation-modal .cr-email-form {
    min-height: calc(var(--big-gap) * 5.65);
  }

  .whitelist-confirmation-modal {
    .confirmation-modal__content {
      align-items: center;
      display: flex;
      height: 60px;
      margin: 10px 0 20px;
      width: 100%;

      &__icon {
        margin: 0 19px 0 10px;
        width: 44px;
      }

      &__text {
        align-items: center;
        color: var(--placeholder-text);
        display: flex;
        font-size: 14px;
        font-style: normal;
        font-weight: normal;
        line-height: 20px;
        margin: 0 10px 0 0;
      }
    }
  }

  &__dropdown {
    align-items: center;
    background-color: var(--background-whitelist-add);
    border-radius: 4px;
    cursor: pointer;
    display: flex;
    transition: 0.2s;
    width: 100%;

    &__select,
    .select {
      align-items: center;
      display: flex;
      flex-direction: row;
      height: 70px;
      justify-content: space-between;
      padding: 0 22px 0 13px;
      transition: 0.2s;
      user-select: none;
      width: 100%;

      &__left {
        display: flex;
        flex-direction: column;
        height: 70px;
        justify-content: center;
        width: 75%;

        &__title {
          color: var(--placeholder-text);
          font-size: 10px;
          font-style: normal;
          font-weight: 500;
          line-height: 12px;
        }

        &__address {
          color: var(--text);
          font-family: "Noto Sans SC";
          font-size: 14px;
          font-style: normal;
          font-weight: bold;
          line-height: 20px;
          margin-right: 12px;
          margin-top: 2px;
          overflow-x: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
        }
      }

      &__right {
        align-items: center;
        display: flex;
        justify-content: flex-end;
        width: 25%;

        &__tip {
          display: flex;
          height: 13px;
          margin-right: 28px;
          margin-top: -1px;
          width: 13px;

          &:hover {
            svg {
              path {
                fill: var(--accent);
              }
            }
          }
        }

        &__select {
          color: var(--placeholder-text);
          font-family: Roboto;
          font-size: 12px;
          font-style: normal;
          font-weight: normal;
          line-height: 12px;
          margin-right: 12px;
        }

        &__chevron {
          display: flex;
          transition: transform 0.3s;
          width: 12px;
        }
      }

      &:hover {
        background-color: var(--whitelist-primary-0-1);
      }
    }

    .fiat-select {
      height: 125px;

      .select__left {
        height: 125px;

        span:nth-child(2) {
          margin-bottom: 15px;
        }
      }
    }

    &__tip,
    .tip {
      background: var(--header);
      border-radius: 4px;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.35);
      display: flex;
      padding: 24px;
      position: absolute;
      right: -80px;
      top: 110px;
      width: 70%;
      z-index: 20;

      &__content {
        display: flex;
        flex-direction: column;
        width: 100%;

        &__block {
          display: flex;
          flex-direction: column;
          margin-bottom: 23px;
          width: 100%;

          &:last-child {
            margin-bottom: 0;
          }

          &__label {
            color: var(--text);
            font-size: 10px;
            font-style: normal;
            font-weight: 500;
            line-height: 12px;
          }

          &__value {
            color: var(--color-white);
            font-size: 12px;
            font-style: normal;
            font-weight: 500;
            line-height: 18px;
            opacity: 0.8;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
          }
        }
      }
    }

    .fiat-tip {
      top: 135px;
    }

    &--open {
      border-bottom-left-radius: 0;
      border-bottom-right-radius: 0;

      .select__right__chevron {
        transform: rotate(-180deg);
      }
    }

    &__body {
      align-items: center;
      background-color: var(--background-whitelist-dropdown);
      border-bottom-left-radius: 4px;
      border-bottom-right-radius: 4px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      position: absolute;
      top: 110px;
      transition: 0.2s;
      width: 100%;
      z-index: 10;

      &__item,
      .item {
        align-items: center;
        border-top: 1px solid var(--wallets-item-border);
        display: flex;
        flex-direction: row;
        height: 70px;
        padding: 0 22px 0 13px;
        width: 100%;

        &__left {
          display: flex;
          flex-direction: column;
          height: 70px;
          justify-content: center;
          width: 75%;

          &__title {
            color: var(--text);
            font-size: 10px;
            font-style: normal;
            font-weight: 500;
            line-height: 12px;
          }

          &__address {
            color: var(--color-white);
            font-family: Roboto;
            font-size: 13px;
            font-style: normal;
            font-weight: 500;
            line-height: 12px;
            margin-right: 12px;
            margin-top: 9px;
            overflow-x: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
          }
        }

        &__right {
          align-items: center;
          display: flex;
          justify-content: flex-end;
          width: 25%;

          &__delete {
            height: 18px;
            width: 15px;

            svg {
              width: 15px;
            }

            &:hover {
              svg {
                path {
                  fill: var(--accent);
                }
              }
            }
          }
        }

        &:hover {
          background-color: var(--whitelist-primary-0-1);
        }
      }

      &__add,
      .add {
        align-items: center;
        background-color: var(--background-whitelist-add);
        border-bottom-left-radius: 4px;
        border-bottom-right-radius: 4px;
        border-top: 1px solid var(--wallets-item-border);
        cursor: pointer;
        display: flex;
        height: 50px;
        justify-content: space-between;
        padding: 13px;
        transition: 0.2s;
        width: 100%;

        &__label {
          color: var(--color-white);
          font-family: Roboto;
          font-size: 12px;
          font-style: normal;
          font-weight: 500;
          line-height: 12px;
        }

        &__icon {
          height: 11px;
          margin-right: 10px;
          width: 11px;
        }

        &:hover {
          background-color: var(--whitelist-primary-0-1);
        }
      }
    }

    .fiat-body {
      top: 165px;

      .item__left {
        width: 37.5%;

        &:first-child {
          margin-right: 30px;
        }
      }
    }
  }

  .cr-email-form {
    background: var(--email-form-bg);
    border-bottom-left-radius: 3px;
    border-bottom-right-radius: 3px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.35);
    max-width: 567px;
    width: 567px;

    &__option {
      background: var(--header);
      border-top-left-radius: 3px;
      border-top-right-radius: 3px;

      &-inner {
        color: var(--color-white);
        font-size: 16px;
        font-style: normal;
        font-weight: normal;
        line-height: 60px;
        text-transform: lowercase;

        &::first-letter {
          text-transform: uppercase;
        }
      }
    }

    &__label {
      background: var(--email-form-bg);
      margin-top: -2px;
    }

    &__input {
      background: transparent;
      border-radius: 4px;

      input {
        border: 1px solid var(--input-block-border-color) !important;
        color: var(--color-white);
      }
    }

    &__group--focused {
      .cr-email-form__label {
        color: var(--accent);
      }

      input {
        background: var(--email-form-bg);
        border: 1px solid var(--accent) !important;
      }
    }
  }

  .whitelist-add-address-modal {
    .cr-email-form__form-content {
      .cr-email-form__group--optional {
        .cr-email-form__input {
          background: var(--whitelist-primary-0-04);
        }
      }
    }
  }
}

@media screen and (max-width: 1024px) {
  .cr-white-list__dropdown__tip,
  .tip {
    right: 0 !important;
  }
}

@media screen and (max-width: 400px) {
  .cr-white-list__dropdown__select,
  .select {
    &__left {
      width: 55% !important;
    }
  }
}
