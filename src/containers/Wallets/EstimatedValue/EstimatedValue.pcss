.pg-estimated-value {
  display: flex;
  background: var(--rgb-body-background-color);

  &__container {
    margin: 3px auto;
    padding: 5px;
    width: 920px;

    .value-container {
      font-size: 120%;
      margin-left: var(--gap);
      vertical-align: middle;

      .value {
        color: var(--rgb-primary-text-color);
      }

      .value-sign {
        color: var(--rgb-cta-layer-color);
        padding: 3px;
        border-radius: 10%;
        background:  var(--rgb-primary-cta-color);
        margin-left: var(--gap);
      }
    }
  }

  @media only screen and (max-device-width: 600px) {
    .value-container {
      font-size: 80%;
    }
  }

}
