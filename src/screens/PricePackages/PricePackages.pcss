.price-package {
  align-items: center;
  display: flex;
  flex-direction: column;
  justify-content: center;

  &__title {
    align-items: center;
    color: #fff;
    display: flex;
    font-family: IBM Plex Sans;
    font-size: 30px;
    font-style: normal;
    font-weight: 600;
    justify-content: center;
    line-height: 45px;
    margin-top: 48px;
    width: 100%;
  }

  .carousel-block {
    display: flex;
    margin: 32px auto;
    width: 940px;

    @media screen and (max-width: 980px) {
      justify-content: center;
      width: 300px;

      & > div {
        width: 300px;
      }

      .carousel-initialized {
        overflow: visible;
      }

      .carousel-track {
        overflow: hidden;
      }

      .carousel-next {
        bottom: -38px;
        height: 20px;
        right: 80px;
        top: auto;
        width: 20px;

        &::before {
          background-image: url("data:image/svg+xml;base64,");
        }
      }

      .carousel-prev {
        bottom: -38px;
        height: 20px;
        left: 80px;
        top: auto;
        width: 20px;

        &::before {
          background-image: url("data:image/svg+xml;base64,");
        }
      }

      .carousel-dots li.carousel-dots-active button::before {
        color: #ffd567;
      }
    }

    &__block {
      background: #222627;
      border-radius: 3px;
      box-shadow: 0 10px 15px rgba(0, 0, 0, 0.25);
      padding-bottom: 80px;
      position: relative;
      width: 300px;

      &:nth-child(2) {
        margin: 0 20px;
      }
    }

    &__header {
      align-items: center;
      background: #263434;
      border-bottom: 1px solid #384847;
      border-radius: 3px 3px 0 0;
      display: flex;
      height: 59px;
      justify-content: space-between;
      padding: 0 16px;
    }

    &__header-text {
      align-items: center;
      color: #fff;
      display: flex;
      font-family: Roboto;
      font-size: 18px;
      font-style: normal;
      font-weight: 500;
      letter-spacing: 0.0357143em;
      line-height: 21px;
      text-transform: uppercase;
    }

    &__limits-block {
      align-items: center;
      background: #222627;
      border-radius: 16px;
      display: flex;
      height: 26px;
      justify-content: space-between;
      padding-left: 15px;
      padding-right: 3px;

      .limits-text {
        align-items: center;
        color: #7d9794;
        display: flex;
        font-family: Roboto;
        font-size: 12px;
        font-style: normal;
        font-weight: 500;
        letter-spacing: 0.0357143em;
        line-height: 14px;
        padding-right: 8px;
        text-align: right;
        text-transform: uppercase;
        white-space: nowrap;
      }
    }

    &__description-block {
      margin: 32px 0;

      .description-header {
        color: #fff;
        font-family: Roboto;
        font-size: 14px;
        font-style: normal;
        font-weight: normal;
        line-height: 16px;
      }

      .requirement {
        text-transform: uppercase;
      }

      .description-list {
        color: #7d9794;
        font-family: Roboto;
        font-size: 12px;
        font-style: normal;
        font-weight: normal;
        height: 72px;
        line-height: 16px;
        margin-top: 1em;
        padding-left: 10px;

        b {
          color: #fff;
        }

        &__item {
          line-height: 18px;
          list-style-type: none;
          padding-left: 10px;
          position: relative;

          &::before {
            color: #ffd567;
            content: "â€¢";
            font-size: 16px;
            left: -10px;
            padding-right: 10px;
            position: absolute;
          }
        }
      }
    }

    &__body {
      margin: 0 16px;

      .limits-block {
        margin-bottom: 24px;

        &__header {
          display: flex;
        }

        &__white-text {
          align-items: center;
          color: #fff;
          display: flex;
          font-family: Roboto;
          font-size: 14px;
          font-style: normal;
          font-weight: 600;
          letter-spacing: 0.0357143em;
          line-height: 16px;
        }

        &__yellow-text {
          align-items: center;
          color: #ffd567;
          display: flex;
          font-family: Roboto;
          font-size: 14px;
          font-style: normal;
          font-weight: 600;
          letter-spacing: 0.0357143em;
          line-height: 16px;
          padding-left: 5px;
          text-transform: uppercase;
        }

        &__img-text {
          color: #3f5758;
          font-family: Roboto;
          font-size: 12px;
          font-style: normal;
          font-weight: normal;
          line-height: 16px;
          margin-left: 5px;
        }

        &__table {
          display: flex;
          flex-direction: column;
          margin-top: 12px;
        }

        &__row {
          display: flex;
          justify-content: space-between;

          &:nth-child(1) {
            background: #141717;
            border-radius: 5px 5px 0 0;
          }

          &:nth-child(3) {
            background: rgba(20, 23, 23, 0.5);
          }
        }

        &__cell {
          align-items: center;
          color: #7d9794;
          display: flex;
          height: 32px;
          width: calc(100% / 3);

          &:nth-child(3) {
            color: #fff;
          }

          img {
            padding-left: 8px;
          }
        }

        &__header-row {
          .limits-block__cell:nth-child(3) {
            color: #7d9794;
          }
        }
      }
    }

    &__btn-block {
      align-items: center;
      border-radius: 4px;
      bottom: 16px;
      cursor: pointer;
      display: flex;
      font-family: Roboto;
      font-size: 16px;
      font-style: normal;
      font-weight: normal;
      height: 48px;
      justify-content: center;
      line-height: 19px;
      position: absolute;
      text-align: center;
      text-decoration: none;
      text-transform: uppercase;
      width: 268px;

      &.yellow {
        background: #ffd567;
        color: #141717;
        cursor: default;
      }

      &.green {
        background: #11b382;
        color: #fff;
      }
    }
  }
}
